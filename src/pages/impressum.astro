---
import Layout from '../layouts/BaseLayout.astro';
import HideEmail from '../components/HideEmail.astro';
import { locations } from '../data/locations';
---

<Layout title="Impressum">
  <section class="container mx-auto px-4">
    <h1 class="text-4xl font-extrabold text-primary-blue mb-4">Impressum</h1>
    
    <div class="prose max-w-none">
      <h2 class="text-2xl font-bold text-gray-800 mt-6 mb-2">Angaben gemäß § 5 TMG</h2>
      <p>
        apothekenluft.de<br />
        c/o Schloss-Apotheke Ilvesheim<br />
        Schloßstr. 16<br />
        68549 Ilvesheim<br />
        <br />
        <strong>Vertreten durch:</strong><br />
        Apotheker Thomas Luft
      </p>

      <h2 class="text-2xl font-bold text-gray-800 mt-6 mb-2">Kontakt</h2>
      <p>
        <strong>Telefon:</strong>(0621) 49 26 26<br/>
        <strong>Telefax:</strong>(0621) 49 52 52<br />
        <strong>E-Mail:</strong><a href="mailto:info<@>apothekenluft.de">info at apothekenluft punkt de</a>
      </p>

      <h2 class="text-2xl font-bold text-gray-800 mt-6 mb-2">Streitschlichtung</h2>
      <p>
        Die Europäische Kommission stellt eine Plattform zur Online-Streitbeilegung (OS) bereit:
        <a href="https://ec.europa.eu/consumers/odr/" target="_blank" rel="noopener noreferrer" class="text-primary-blue hover:underline">
          https://ec.europa.eu/consumers/odr/
        </a>.<br>
        Unsere E-Mail-Adresse finden Sie oben im Impressum.
      </p>
    </div>
  </section>

  <section class="space-y-16">
    <h2 class="text-3xl font-bold text-primary-blue text-center mb-8">Unsere Standorte</h2>
    <div class="flex flex-col lg:flex-row gap-8">
      {locations.map(location => (
        <div class="flex-1 bg-white p-6 rounded-lg shadow-xl flex flex-col items-center text-center">
          <img 
            src={location.logo} 
            alt={`Logo von ${location.name}`} 
            class="max-w-48 mx-auto mb-4" 
          />
          <h3 class="text-xl font-bold text-gray-800 mb-2">{location.name}</h3>
          <address class="not-italic text-gray-700 space-y-2">
            <p>{location.adresse}</p>
            <p><strong>Tel:</strong> {location.tel}</p>
            <p><strong>Fax:</strong> {location.fax}</p>
            <p><strong>E-Mail:</strong> <a class="text-primary-blue hover:underline" data-user={location.mailUser} data-domain={location.mailDomain}></a></p>
            <p><strong>Web:</strong> <a href={location.web} target="_blank" rel="noopener noreferrer" class="text-primary-blue hover:underline">{location.web}</a></p>
          </address>
        </div>
      ))}
    </div>
  </section>
</Layout>

<HideEmail />